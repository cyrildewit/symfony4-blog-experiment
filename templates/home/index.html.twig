{% extends 'layouts/master.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<!-- Page Header -->
<header class="masthead" style="background-image: url('img/home-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Symfony Blog Experiment</h1>
                    <span class="subheading">A Blog Theme by Start Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            {% for post in latestPosts %}
                <div class="post-preview">
                    <a href="{{ path('post_show', { slug: post.slug }) }}">
                        <h2 class="post-title">{{ post.title }}</h2>
                        <h3 class="post-subtitle">{{ post.subTitle }}</h3>
                    </a>
                    <p class="post-meta">Posted by <a href="#">Start Bootstrap</a> on {{ post.publishedAt|date('F j, Y') }}</p>
                </div>

                {# {% if loop.last %}<hr>{% endif %} #}
                <hr>
            {% else %}
                <div class="well text-center">No posts found!</div>
            {% endfor %}

            <!-- Pager -->
            <div class="clearfix">
                <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
            </div>
        </div>
    </div>
</div>

<hr>

{% endblock %}
